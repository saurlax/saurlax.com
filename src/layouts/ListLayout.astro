---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <h1 class="my-4 text-4xl font-bold">{title}</h1>
  <main class="my-4 gap-4 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3">
    <slot />
  </main>
  <div class="my-4">
    <slot name="footer" />
  </div>
</Layout>
