---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main class="m-auto p-4 max-w-prose">
    <h1 class="text-4xl font-bold">{title}</h1>
    <div class="text-base prose prose-truegray xl:text-xl">
      <slot />
    </div>
  </main>
</Layout>
