---
import { getCollection } from "astro:content";
import ListLayout from "../../layouts/ListLayout.astro";
import Card from "../../components/Card.astro";
import dayjs from "dayjs";
import ArticleCard from "../../components/ArticleCard.astro";

export async function getStaticPaths() {
  const postsEntries = await getCollection("posts");
  const tags = new Set<string>();
  postsEntries.forEach((entry) => {
    entry.data.tags.forEach((tag) => tags.add(tag));
  });
  return Array.from(tags).map((tag) => ({
    params: { slug: tag },
    props: {
      tag,
      entries: postsEntries.filter((entry) => entry.data.tags.includes(tag)),
    },
  }));
}

const { tag, entries } = Astro.props;
---

<ListLayout title={tag}>
  {
    entries
      .sort((a, b) => {
        return b.data.date.getTime() - a.data.date.getTime();
      })
      .map((entry) => <ArticleCard entry={entry} />)
  }
</ListLayout>
